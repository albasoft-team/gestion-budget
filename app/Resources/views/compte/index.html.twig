{% extends 'base.html.twig' %}

{% block body %}
    <h1>Comptes list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Numerocompte</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for compte in comptes %}
            <tr>
                <td><a href="{{ path('compte_show', { 'id': compte.id }) }}">{{ compte.id }}</a></td>
                <td>{{ compte.libelle }}</td>
                <td>{{ compte.numeroCompte }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('compte_show', { 'id': compte.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('compte_edit', { 'id': compte.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('compte_new') }}">Create a new compte</a>
        </li>
    </ul>
{% endblock %}
