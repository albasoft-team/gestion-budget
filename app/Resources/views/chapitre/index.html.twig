{% block body %}

    <div class="row container">
        <div class="col-md-10 col-md-offset-1">

            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title">Liste des chapitres</h3>
                        </div>
                        <div class="col col-xs-6 text-right">
                            <a  href="{{ path('chapitre_new') }}" class="btn btn-sm btn-primary btn-create">Create New</a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list text-center">
                        <thead>
                        <tr>
                            <th style="width: 20%; text-align: center"><em class="glyphicon glyphicon-cog"></em></th>
                            <th class="hidden-xs">ID</th>
                            <th>Designation</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for chapitre in chapitres %}
