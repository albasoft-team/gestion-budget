                                <td align="center">
                                    <a href="{{ path('chapitre_edit', { 'id': chapitre.id }) }}" class="btn btn-default"><em class="glyphicon glyphicon-pencil"></em></a>
                                    <a class="btn btn-primary" href="{{ path('chapitre_show', { 'id': chapitre.id }) }}"><em class="glyphicon glyphicon-list"></em></a>
                                    <a class="btn btn-danger"><em class="glyphicon glyphicon-trash"></em></a>
                                </td>
                                <td class="hidden-xs"><a href="{{ path('chapitre_show', { 'id': chapitre.id }) }}">{{ chapitre.id }}</a></td>
                                <td>{{ chapitre.designation }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>
