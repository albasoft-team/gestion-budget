{% extends 'base.html.twig' %}

{% block body %}
    <div class="row container">
        <div class="col-md-10 col-md-offset-1">

            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title">Liste des régions</h3>
                        </div>
                        <div class="col col-xs-6 text-right">
                            <a  href="{{ path('region_new') }}" class="btn btn-sm btn-success btn-create"><em class="glyphicon glyphicon-plus"></em></a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list text-center">
                        <thead>
                        <tr>
                            <th style="width: 20%; text-align: center"><em class="glyphicon glyphicon-cog"></em></th>
                            <th class="hidden-xs">ID</th>
                            <th>Nom region</th>
                            <th>Code région</th>
                            <th>Département</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for region in regions %}
                            <tr>
                                <td align="center">
                                    <a href="{{ path('region_edit', { 'id': region.id }) }}" class="btn btn-default"><em class="glyphicon glyphicon-pencil"></em></a>
                                    <a class="btn btn-primary" href="{{ path('region_show', { 'id': region.id }) }}"><em class="glyphicon glyphicon-list"></em></a>
                                    <a class="btn btn-danger"><em class="glyphicon glyphicon-trash"></em></a>
                                </td>
                                <td class="hidden-xs"><a href="{{ path('region_show', { 'id': region.id }) }}">{{ region.id }}</a></td>
                                <td>{{ region.nomRegion }}</td>
                                <td>{{ region.codeRegion }}</td>
                                <td>
                                    <select class="form-control">
                                        {% if region.departements %}
                                            {% for depart in region.departements %}
                                                <option>{{ depart.nomDepartement }}</option>
                                             {% endfor %}
                                        {% endif %}
                                    </select>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>
{% endblock %}
