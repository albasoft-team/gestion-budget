{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="row">
        <div class="col-md-offset-4 col-lg-4 col-sm-offset-4 col-sm-5 col-md-4">
            <div class="well" style="margin-top:25px" >
                <img class="profile-img" src="{{ asset('senegal.png') }}"
                     alt="">
                <form class="form-signin"  action="{{ path("fos_user_security_check") }}" method="post">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon " style="color: dodgerblue"><i class="glyphicon glyphicon-user"></i></span>
                        <input type="text" id="username" name="_username" class="form-control " placeholder="nom d'utilisateur" required autofocus  value="{{ last_username }}">
                    </div>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon " style="color: dodgerblue"><i class="glyphicon glyphicon-lock"></i></span>
                        <input type="password" id="password" name="_password" class="form-control " placeholder="mot de passe" required autofocus  value="{{ last_username }}">
                    </div>
                    <button class="btn btn-lg btn-block " style="background-color: #00547E;color: white"
                            type="submit"
                            id="_submit"
                            name="_submit"
                            value="{{ 'security.login.submit'|trans }}" >Se connecter
                    </button>

                    <div class="checkbox" >
                        <label class="color-text-login">
                            <input type="checkbox" > Se souvenir de moi
                        </label>
                    </div>
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                </form>
            </div>
            <div class="colorgraph"></div>

        </div>
    </div>

</div>